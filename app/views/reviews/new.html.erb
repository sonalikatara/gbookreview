
<h1>New Review</h1>
<div align="center">
<%= form_for @review,:url=>{:action=>'create'} do |f|%>
<% if @review.errors.any? %>
  <div class="field_with_errors">
    
      The form contains <%= pluralize(@review.errors.count, "error") %>.
   
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li> <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
  <p>
    <%= f.label :reader %>
    <%= f.text_field :reader %>
  </p>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author %>
    <%= f.text_field :author %>
  </p>
 <p>
    <%= f.label :picture %>
    <%= f.text_field :picture %>
  </p>
  <p> <!-- <%= f.select :rating, [['Not Good',1],['Loved it',2],['Got to Read',3]] %> -->
  <%= render 'reviews/shared_files/review_ratings', f: f %> 
  </p>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_area :comment , size: "60x12"%>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
